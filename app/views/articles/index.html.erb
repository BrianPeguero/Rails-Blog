<div class="jumbotron">
    <h1>Listing Articles</h1>
    <p>Create a 
    <%= link_to "New Article", new_article_path %> here.</p>

    </br>

    <table>
        <tr>
            <th class="pr-5">Title</th>
            <th class="pr-5">Text</th>
            <th></th>
        </tr>

        <% @articles.each() do |article| %>
            <tr class="border">
                <td class="pr-5 pb-3 pt-3 pl-2"><%= article.title %></td>
                <td class="pr-5 pb-3 pt-3 pl-2"><%= article.text %></td>
                <td class="pl-3 pb-3 pt-3"><%= link_to "Show", article_path(article), class: "btn btn-primary" %></td>
                <td class="pl-3 pb-3 pt-3"><%= link_to "Edit", edit_article_path(article), class: "btn btn-primary" %></td>
                <td class="pr-3 pl-3 pb-3 pt-3"><%= link_to "Delete", article_path(article), class: "btn btn-primary", method: :delete, data: {confirm: "Are you sure?"}%></td>
            </tr>
        <% end %>
    </table>
    
    </br>
    
    <%= link_to "Back", controller: "welcome" %>
</div>