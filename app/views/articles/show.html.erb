<p>
    <strong>Title:</strong>
    <%= @article.title %>
</p>

<p>
    <strong>Text:</strong>
    <%= @article.text %>
</p>

<!--To show all the comments related to the article-->
<h2>Comments</h2>
<%= render @article.comments %>

<!--To creat a comment related to the article-->
<h2>Add a Comment</h2>

<%= form_with(model: [@article.comments.build], local: true) do |form| %>
    <p>
        <%= form.label :commenter %>
        <%= form.text_field :commenter%>
    </p>

    <p>
        <%= form.label :body %>
        <%= form.text_field :body%>
    </p>
    
    <p>
        <%= form.submit%>
    </p>
<% end %>

<%= link_to "Edit", edit_article_path(@article) %>
<%= link_to "Back", articles_path %>